# CloudOptima AI - Environment Variables
# Copy to .env and fill in your values

# Azure Authentication (Service Principal)
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_SUBSCRIPTION_ID=your-subscription-id

# Database
DATABASE_URL=sqlite+aiosqlite:///./cloudoptima.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/cloudoptima

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Authentication
# Generate a secure key with: python -c "import secrets; print(f'co_{secrets.token_urlsafe(32)}')"
API_KEY=
AUTH_ENABLED=true
# Comma-separated list of allowed CORS origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Cost Analysis Settings
COST_LOOKBACK_DAYS=30
BUDGET_ALERT_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO
