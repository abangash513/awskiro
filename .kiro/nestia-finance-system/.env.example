# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database Configuration
DB_TYPE=sqlite
DB_DATABASE=./data/nestia-finance.db
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# Feature Flags
OPEN_BANKING_ENABLED=false
PLAID_ENABLED=false
ML_CATEGORIZATION_ENABLED=true
INVESTMENT_ANALYSIS_ENABLED=true

# External API Configuration (Optional)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENVIRONMENT=sandbox

# Open Banking Configuration (Optional)
OPEN_BANKING_CLIENT_ID=your-open-banking-client-id
OPEN_BANKING_CLIENT_SECRET=your-open-banking-client-secret
OPEN_BANKING_ENVIRONMENT=sandbox

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/nestia-finance.log

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_PUSH_ENABLED=false

# Data Retention Configuration
DEFAULT_DATA_RETENTION_MONTHS=84
MAX_DATA_RETENTION_MONTHS=120

# Privacy Configuration
LOCAL_PROCESSING_ONLY=false
CLOUD_SYNC_ENABLED=true
ANALYTICS_ENABLED=false

# Performance Configuration
CACHE_TTL=300
MAX_TRANSACTIONS_PER_IMPORT=10000
ANALYSIS_BATCH_SIZE=1000

# AI Analysis Configuration
AI_API_KEY=your-openai-api-key-here
AI_API_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4
AI_TEMPERATURE=0.1
AI_MAX_TOKENS=2000
AI_TIMEOUT=30000
AI_CACHE_ENABLED=true
AI_CACHE_TTL=1800
AI_RATE_LIMIT_PER_MINUTE=60

# Development Configuration
SWAGGER_ENABLED=true
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3001